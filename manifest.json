{
  "manifest_version": 2,
  "name": "Save Texts",
  "version": "1.0",
  "description": "Save interestoing point on any page you visit",
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "16.png"
  },
  

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
],
"background": {
  "scripts": ["event.js"],
  "persistent": false
},
"permissions" : ["storage", "contextMenus",
  "tabs",
  "<all_urls>"
],
"icons": {
  "48": "16.png"
}
} 